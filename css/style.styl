@import 'jeet/framework'
@import 'jeet/goodies'
@import 'jeet/typography'

@font-face
  font-family 'Conv_TradeGothicLTStd-Light'
  src url('TradeGothicLTStd-Light.eot')
  src local('x'), url('TradeGothicLTStd-Light.ttf') format('truetype')
  font-weight normal
  font-style normal

@font-face
  font-family 'Conv_TradeGothicLTStd-Bold'
  src url('TradeGothicLTStd-Bold.eot')
  src local('x'), url('TradeGothicLTStd-Bold.ttf') format('truetype')
  font-weight normal
  font-style normal

@font-face
  font-family 'Conv_TradeGothicLTStd-Cn18'
  src url('TradeGothicLTStd-Cn18.eot')
  src local('x'), url('TradeGothicLTStd-Cn18.ttf') format('truetype')
  font-weight normal
  font-style normal

body
  background #020203 url(../images/bg_vert.png) repeat-x

#bg
  background url(../images/bg_grey.jpg) no-repeat 0 0
  center()
  height 850px

header, section, footer
  > div
    center()

header
  height 72px
  margin-top 30px
  margin-bottom 23px

header > div > div
  border-bottom solid 1px #939598
  col(8)
  height 72px
  margin-right 0
  padding-left 30px
  
#logo
  border-bottom solid 1px #939598
  height 95px
  margin-right 0
  img
    min-width 141px
    

#tagline
  border-bottom solid 1px #939598
  col(8)
  font-family 'Conv_TradeGothicLTStd-Cn18'
  height 72px
  padding-top 42px
  margin-right 0

nav
  border-bottom solid 1px #939598
  col(8)
  height 30px
  margin-top 42px
  padding-right 40px
  text-align right
  a
    background url(../images/sprite.png) no-repeat 0 0
    padding-right 24px
    padding-bottom 2px
    &.off
      background-position -25px -25px
      &:hover
        background-position -50px -50px

section
  > div
    col(17)
    height 429px
    margin-top 145px
    offset(3)
    a
      color #f36e21
      whitespace no-wrap
      &:hover
        color #fff

footer
  > div
    col(24)
    center()
    text-align center
    > p
      border-top solid 1px #939598
      padding-top 31px
      span
        whitespace nowrap

.rt
  col(4)

h1
  font-family 'Conv_TradeGothicLTStd-Bold'
  font-size 56px
  font-weight normal

h2
  font-family 'Conv_TradeGothicLTStd-Light'
  font-size 30px
  font-weight normal
  margin-top 42px
  strong
    font-family 'Conv_TradeGothicLTStd-Bold'
    font-weight normal

h3
  text-align center
  font-size 20px
  font-weight normal
  strong
    font-weight bold 

// Mobile
bp()
section aside, section article, section > div, pre, #logo, #tagline, footer, nav
  stack()
  border-bottom none
h1
  font-size 36px
h2
  font-size 20px
header > div > div
  border-bottom none
  height 95px
  padding-left 0
  width 100%
#logo img
  margin auto
  border-bottom none
#tagline
  height auto
  padding-top 15px
nav
  col(24)
  margin 15px auto 0
  padding-right 0
section > div
  height 100%
  margin-top 30px
  text-align left
footer > div > p
  padding-top 12px
  
endbp()

